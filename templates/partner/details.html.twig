{% extends 'base.html.twig' %}

{% block flash %}
    {% include "_partials/_flash.html.twig" %}
{% endblock %}

{% block title %}{{ partner.name }}{% endblock %}

{% block PageTitle %}<h1 class="my-3">{{ partner.name }}</h1>{% endblock %}

